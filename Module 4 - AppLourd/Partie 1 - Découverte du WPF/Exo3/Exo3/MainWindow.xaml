<Window x:Class="Exo3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exo3"
        mc:Ignorable="d"
        Title="Exercice 3" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <WrapPanel HorizontalAlignment="Center">
                <Label Content="Entrez votre nom ici : " VerticalAlignment="Top" Height="27" Width="123"/>
                <TextBox Name="TextBoxName"  Height="25" TextWrapping="Wrap" Width="130"/>
            </WrapPanel>
            <WrapPanel HorizontalAlignment="Center">
                <TextBlock TextWrapping="Wrap" Width="60" Height="29" FontSize="14" Text="Bonjour"/>
                <TextBlock TextWrapping="Wrap" Text="{Binding Path=Text, ElementName=TextBoxName}" Height="29" Width="153" FontSize="14"/>
            </WrapPanel>
        </StackPanel>

    </Grid>
</Window>
