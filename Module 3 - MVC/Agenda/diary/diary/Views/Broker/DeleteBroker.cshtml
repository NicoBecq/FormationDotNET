@model diary.Models.broker

@{
    ViewBag.Title = "Suppression de courtier";
}

<h2>Etes vous sûr(e) de vouloir supprimer ce client?</h2>

<div id="delete_form_container" class="container rounded mt-2 text-center">
    @using (Html.BeginForm("DeleteBroker", "Broker", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.idBroker)
        <div class="form-group pt-2">
            <p>
                @Html.DisplayNameFor(model => model.lastName)   <br />
                @Html.DisplayFor(model => model.lastName)
            </p>
        </div>
        <div class="form-group pt-2">
            <p>
                @Html.DisplayNameFor(model => model.firstName)  <br />
                @Html.DisplayFor(model => model.firstName)
            </p>
        </div>
        <div class="form-group pt-2">
            <p>
                @Html.DisplayNameFor(model => model.mail)   <br />
                @Html.DisplayFor(model => model.mail)
            </p>
        </div>
        <div class="form-group pt-2">
            <p>
                @Html.DisplayNameFor(model => model.phoneNumber)    <br />
                @Html.DisplayFor(model => model.phoneNumber)
            </p>
        </div>
        <div>
            <button id="delete_submit" type="submit" class="btn btn-danger mb-2">SUPPRIMER</button>
        </div>
    }
</div>
