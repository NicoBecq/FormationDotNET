@model IEnumerable<diary.Models.appointment>

@{
    ViewBag.Title = "Index";
}

<h2>@DateTime.Now.ToString("dddd dd MMMM yyyy")</h2>

<table class="table table-sm table-hover table-striped table-dark">
    <tr class="thead-dark">
        <th>
            @Html.DisplayNameFor(model => model.datHour)
        </th>
        <th>
            Courtier
        </th>
        <th>
            Client
        </th>
        <th>
            @Html.DisplayNameFor(model => model.subject)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.datHour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.broker.lastName)
                @Html.DisplayFor(modelItem => item.broker.firstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.customer.lastName)
                @Html.DisplayFor(modelItem => item.customer.firstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.subject)
            </td>
            <td>
                <a id="delete_submit" type="submit" class="btn btn-danger" onclick="return confirm('Etes-vous sûr de vouloir supprimer ce rendez-vous?\nLa suppression est définitive');" href=@Url.Action("DeleteAppointment", "Home", new { id = item.idAppointment })>Supprimer</a>
            </td>
        </tr>
    }
</table>
